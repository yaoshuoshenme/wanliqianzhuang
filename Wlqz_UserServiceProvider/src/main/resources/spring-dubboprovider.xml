    <!--<dubbo:service interface="com" ref="userServiceProvider" retries="0"></dubbo:service>-->
    
    <!--提供服务-->
    <!--1、全局应用名称-->
    <dubbo:application name="userprovider"></dubbo:application>
    <!--2、配置注册中心-->
    <dubbo:registry address="10.8.163.136:2181" protocol="zookeeper" ></dubbo:registry>
    <!--3、设置协议-->
    <dubbo:protocol name="dubbo" port="20880"></dubbo:protocol>
    <!--4、发布服务-->
    <dubbo:service interface="com.qzwl.service.user.UserService" ref="userServiceProvider" retries="0" timeout="15000"></dubbo:service>
    <dubbo:service interface="com.qzwl.service.user.UserDetailService" ref="userDetailServiceProvider" retries="0" timeout="15000"></dubbo:service>
    <dubbo:service interface="com.qzwl.service.user.RankService" ref="rankServiceProvider" retries="0" timeout="15000"></dubbo:service>
</beans>